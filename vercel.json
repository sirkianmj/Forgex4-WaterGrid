{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "." }
    }
  ],
  "routes": [
    {
      "src": "/simulate",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}