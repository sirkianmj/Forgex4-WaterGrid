{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "model_stats.json"
        ]
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/simulate",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}